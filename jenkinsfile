pipeline {
    agent any

    environment {
        FRONTEND_IMAGE = "react-vite-app:latest"
        BACKEND_IMAGE  = "backend-api:latest"
        NETWORK_NAME   = "app-network"
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/pradeep-18-bit/app.git'
            }
        }

        stage('Create Docker Network') {
            steps {
                sh '''
                docker network inspect $NETWORK_NAME >/dev/null 2>&1 || \
                docker network create $NETWORK_NAME
                '''
            }
        }

        stage('Build Frontend Image') {
            steps {
                sh '''
                docker build -t $FRONTEND_IMAGE .
                '''
            }
        }

        stage('Build Backend Image') {
            steps {
                sh '''
                cd backend
                docker build -t $BACKEND_IMAGE .
                '''
            }
        }

        stage('Stop Existing Containers') {
            steps {
                sh '''
                docker stop react-vite backend mongo || true
                docker rm react-vite backend mongo || true
                '''
            }
        }

        stage('Start MongoDB') {
            steps {
                sh '''
                docker run -d \
                  --name mongo \
                  --network $NETWORK_NAME \
                  mongo
                '''
            }
        }

        stage('Start Backend') {
            steps {
                sh '''
                docker run -d \
                  --name backend \
                  --network $NETWORK_NAME \
                  -p 5000:5000 \
                  --env-file backend/.env \
                  $BACKEND_IMAGE
                '''
            }
        }

        stage('Start Frontend') {
            steps {
                sh '''
                docker run -d \
                  --name react-vite \
                  --network $NETWORK_NAME \
                  -p 80:80 \
                  $FRONTEND_IMAGE
                '''
            }
        }
    }

    post {
        success {
            echo "✅ FULL-STACK DEPLOYMENT SUCCESSFUL (Frontend + Backend + DB)"
        }
        failure {
            echo "❌ FULL-STACK DEPLOYMENT FAILED"
        }
    }
}
