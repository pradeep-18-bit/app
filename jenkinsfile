pipeline {
    agent any

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/pradeep-18-bit/app.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t react-vite-app:latest .'
            }
        }

        stage('Stop Existing Container') {
            steps {
                sh '''
                docker stop react-vite || true
                docker rm react-vite || true
                '''
            }
        }

        stage('Run Docker Container') {
            steps {
                sh '''
                docker run -d \
                --name react-vite \
                -p 80:80 \
                react-vite-app:latest
                '''
            }
        }
    }

    post {
        success {
            echo "✅ Jenkins Docker Deployment SUCCESS"
        }
        failure {
            echo "❌ Jenkins Docker Deployment FAILED"
        }
    }
}
